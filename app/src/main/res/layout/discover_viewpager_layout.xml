<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="discoverViewpagerViewModel"
            type="com.beastpotato.movieinformation.viewmodels.DiscoverViewpagerViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_light_gray"
            android:setOnTabSelectedListener="@{discoverViewpagerViewModel.onTabSelectedListener}"
            app:tabMode="scrollable" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabs"
            app:itemBindings="@{discoverViewpagerViewModel.itemBindings}"
            app:tabLayout="@{discoverViewpagerViewModel.tabLayout}"
            app:tabStrings="@{discoverViewpagerViewModel.tabStrings}" />
    </RelativeLayout>
</layout>