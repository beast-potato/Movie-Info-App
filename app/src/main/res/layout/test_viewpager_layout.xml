<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="testViewpagerViewModel"
            type="com.beastpotato.movieinformation.viewmodels.TestViewpagerViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_light_gray"
            android:setOnTabSelectedListener="@{testViewpagerViewModel.onTabSelectedListener}"
            app:tabMode="scrollable" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabs"
            app:itemBinding="@{testViewpagerViewModel.itemBindings}"
            app:items="@{testViewpagerViewModel.items}"
            app:tabLayout="@{testViewpagerViewModel.tabLayout}"
            app:tabStrings="@{testViewpagerViewModel.tabStrings}" />
    </RelativeLayout>
</layout>